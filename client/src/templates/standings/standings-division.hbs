    <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th data-toggle="tooltip" data-placement="top" title="Team">Team</th>
        <th data-toggle="tooltip" data-placement="top" title="Games played">GP</th>
        <th data-toggle="tooltip" data-placement="top" title="Wins - Losses - OT Losses">Record</th>
        <th data-toggle="tooltip" data-placement="top" title="Points">PTS</th>
        <th data-toggle="tooltip" data-placement="top" title="Point percentage">PTS%</th>
        <th data-toggle="tooltip" data-placement="top" title="Goals for - Goals against">GF-GA</th>
        <th data-toggle="tooltip" data-placement="top" title="just the tip">Streak</th>
      </tr>
    </thead>
    <tbody>
     {{#each .}}
      <tr>
        <td class="small-logo {{helperLowerCase team.name}}"></td>
        <td class="">{{team.name}}</td>
        <td>{{gamesPlayed}}</td>
        <td>{{leagueRecord.wins}}-{{leagueRecord.losses}}-{{leagueRecord.ot}}</td>
        <td>{{points}}</td>
        <td>{{pointPercentage}}</td>
        <td>{{goalsScored}}-{{goalsAgainst}}</td>
        <td>{{streak.streakCode}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>