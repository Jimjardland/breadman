<div class="table-responsive">
        <h2>Stats</h2>
         <select class="selectpicker drop" id="sortby" data-width="100px">
          <option value="" disabled selected>Sort by</option>
          <option value="points">Points</option>
          <option value="goals">Goals</option>
          <option value="assists">Assists</option>
          <option value="fsPoints">Points 5v5</option>
          <option value="penaltiesPerSixty">PIM per 60</option>
          <option value="pointsPerSixty">Points per 60</option>
          <option value="faceoffWinPctg">Faceoff percentage</option>
        </select>
    <table class="table table-striped">
    <thead>
      <tr>
        <th data-toggle="tooltip" data-placement="top" title="Player">Player</th>
        <th data-toggle="tooltip" data-placement="top" title="Team">Team</th>
        <th data-toggle="tooltip" data-placement="top" title="Position">Pos</th>
        <th data-toggle="tooltip" data-placement="top" title="Games played">Gp</th>
        <th data-toggle="tooltip" data-placement="top" title="Goals">G</th>
        <th data-toggle="tooltip" data-placement="top" title="Assists">A</th>
        <th data-toggle="tooltip" data-placement="top" title="Points">P</th>
        <th data-toggle="tooltip" data-placement="top" title="Penalty per 60 minutes of icetime">PIM/60</th>
        <th data-toggle="tooltip" data-placement="top" title="Points per 60 minutes of icetime">P/60</th>
        <th data-toggle="tooltip" data-placement="top" title="Points in even strength">P/5v5</th>
        <th data-toggle="tooltip" data-placement="top" title="Faceoff win percentage">FO%</th>
      </tr>
    </thead>
    <tbody>
     {{#each data}}
      <tr>
       <td class="col-md-2" data-toggle="tooltip" data-placement="top" title="Player">{{playerName}}</td>
        <td class="col-md-1 small-logo {{fixTeam playerTeamsPlayedFor}}" data-toggle="tooltip" data-placement="top" title="Team"></td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Position">{{playerPositionCode}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Games played">{{gamesPlayed}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Goals">{{goals}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Assists">{{assists}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Points">{{points}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Penalty per 60 minutes of icetime">{{toFixed penaltiesPerSixty 2}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Points per 60 minutes of icetime">{{toFixed pointsPerSixty 2}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Points in even strength">{{fsPoints}}</td>
        <td class="col-md-1" data-toggle="tooltip" data-placement="top" title="Faceoff win percentage">{{toFixed faceoffWinPctg 2}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="text-center">
      <nav aria-label="Page navigation pagination">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" data-change="prev" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" data-change="next" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
      </nav>
    </div>