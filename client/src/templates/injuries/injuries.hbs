{{#each InjuryReports}}
<div class="table-responsive">
  <div class="injury {{helperLowerCase Team.Name}} logo-medium"></div>
  <h2 class="injuries-team">{{Team.Name}}</h2>
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Player</th>
            <th>Date</th>
            <th>Status</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    {{#each Injuries}}
      <tr>
          <td class="col-md-3">{{Player.FirstName}} {{Player.LastName}}</td>
          <td class="col-md-2">{{ReportedDate}}</td>
          <td class="col-md-2">{{InjuryDetail.Status}}</td>
          <td class="col-md-4">{{InjuryDetail.Description}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>
{{/each}}